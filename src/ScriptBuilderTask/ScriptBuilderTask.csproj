<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyName>NServiceBus.Metrics.PerformanceCounters.Task</AssemblyName>
    <NuSpecFileName>NServiceBus.Metrics.PerformanceCounters.MsBuild</NuSpecFileName>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
    <NoWarn>CS1591;CS0006</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="Microsoft.Build" />
    <Reference Include="Microsoft.Build.Framework" />
    <Reference Include="Microsoft.Build.Tasks.v4.0" />
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" />
    <PackageReference Include="NServiceBus.Metrics" Version="2.0.0-*" />
    <PackageReference Include="NuGetPackager" Version="0.6.3" />
    <PackageReference Include="Mono.Cecil" Version="0.10.0-beta6" />
    <ProjectReference Include="..\ScriptBuilder\ScriptBuilder.csproj" />
  </ItemGroup>
  <Target Name="BeforeBuildPackages" BeforeTargets="BuildPackages">
    <CreateItem Include="@(PackageDefinitions)" Condition="'%(Name)' == 'Mono.Cecil'">
      <Output TaskParameter="Include" ItemName="MonoCecilRef" />
    </CreateItem>
    <PropertyGroup>
      <IlMerge>"$(SolutionDir)..\Tools\ilmerge.exe"</IlMerge>
      <ScriptBuilderDll>$(ProjectDir)bin\$(ConfigurationName)\net452\NServiceBus.Metrics.PerformanceCounters.Builder.dll</ScriptBuilderDll>
      <ScriptBuilderTaskDll>$(ProjectDir)bin\$(ConfigurationName)\net452\NServiceBus.Metrics.PerformanceCounters.Task.dll</ScriptBuilderTaskDll>
      <Cecil>@(MonoCecilRef->'%(ResolvedPath)')\lib\net40\Mono.Cecil.dll</Cecil>
      <MergeOutputDll>$(SolutionDir)..\binaries\NServiceBus.Metrics.PerformanceCounters.Task.dll</MergeOutputDll>
      <MergeOutputPdb>$(SolutionDir)..\binaries\NServiceBus.Metrics.PerformanceCounters.Task.pdb</MergeOutputPdb>
      <MsBuildTargets>$(SolutionDir)..\packaging\nuget\NServiceBus.Metrics.PerformanceCounters.MsBuild.targets</MsBuildTargets>
    </PropertyGroup>
    <MakeDir Directories="$(SolutionDir)..\binaries" />
    <Exec Command="$(IlMerge) /out:&quot;$(MergeOutputDll)&quot; &quot;$(ScriptBuilderTaskDll)&quot; &quot;$(ScriptBuilderDll)&quot; &quot;$(Cecil)&quot; /target:library /targetplatform:&quot;v4,$(FrameworkPathOverride)&quot; /internalize /keyfile:&quot;$(SolutionDir)NServiceBus.snk&quot;" />
    <MakeDir Directories="$(SolutionDir)ForIntegration" />
    <Copy SourceFiles="$(MergeOutputDll)" DestinationFolder="$(SolutionDir)ForIntegration" />
    <Copy SourceFiles="$(MergeOutputPdb)" DestinationFolder="$(SolutionDir)ForIntegration" />
    <Copy SourceFiles="$(MsBuildTargets)" DestinationFolder="$(SolutionDir)ForIntegration\build" />
  </Target>
</Project>